{
	"root": true,
	"extends": [
		"wikimedia/server"
	],
	"rules": {
		"camelcase": [
			"error",
			{
				"properties": "never"
			}
		],
		"indent": [
			"off",
			4
		],
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		],
		"space-in-parens": [
			"error",
			"never"
		],
		"computed-property-spacing": "off",
		"no-multi-spaces": "off",
		"array-bracket-spacing": "off",
		"array-callback-return": "warn",
		"default-param-last": "warn",
		"n/no-process-exit": "warn",
		"no-shadow": "warn",
		"strict": "warn",
		"semi-style": "warn"
	}
}
